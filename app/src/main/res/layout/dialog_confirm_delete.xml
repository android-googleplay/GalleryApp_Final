<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <image.gallery.organize.Helper.RoundCornerLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:topEnabled="true"
        app:bottomEnabled="false"
        android:paddingHorizontal="20dp"
        app:cornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/ic_remove"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="@dimen/_75sdp"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/txtMsg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                style="@style/textStyleSemiBold"
                android:gravity="center"
                android:text="@string/delete_sheet"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                style="@style/textStyleNormal"
                android:gravity="center"
                android:text="@string/are_you_sure_you_want_to_delete"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txtCancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_install2"
                    android:backgroundTint="#80557CF1"
                    style="@style/textStyleSemiBold"
                    android:gravity="center"
                    android:text="@string/cancel_sheet"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_12ssp" />

                <View
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_10sdp" />


                <TextView
                    android:id="@+id/txtDelete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_install2"
                    android:fontFamily="@font/font_regular"
                    android:gravity="center"
                    style="@style/textStyleSemiBold"
                    android:text="@string/delete"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp" />
        </LinearLayout>


    </image.gallery.organize.Helper.RoundCornerLayout>

</FrameLayout>