<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Apptheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/colorBlack</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="fontFamily">@font/font_regular</item>

        <item name="actionOverflowMenuStyle">@style/myListPopupWindow</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/colorBlack</item>

        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowFullscreen">true</item>
        <item name="fontFamily">@font/font_regular</item>
    </style>

    <style name="dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme.Dialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MineCustomTabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/font_regular</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="EditImageMenuStyle">
        <item name="android:layout_width">@dimen/_25sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="EditMenuTextStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_9sdp</item>
    </style>

    <style name="Apptheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">@drawable/btn_done</item>
    </style>

    <string name="ad_attribution">Ad</string>

    <style name="home_Tab">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="buttonAnim">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/font_regular</item>
    </style>

    <style name="button">
        <item name="font">@font/font_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:background">@drawable/btn_install2</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="title_text">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/colorMain</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/font_regular</item>
    </style>
    <style name="textStyleNormal">
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="textStyleSemiBold">
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="myListPopupWindow" parent="Widget.MaterialComponents.PopupMenu.ListPopupWindow">
        <item name="android:popupBackground">@drawable/bg_menu</item>
    </style>
</resources>